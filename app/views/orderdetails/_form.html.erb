


<section class="order-form my-4 mx-4">
    <div class="container pt-4">

      <div class="row">
        <div class="col-12">
          <h1>Order Details!</h1>
           <hr class="mt-1">
        </div>

        <%= form_for @orderdetail,html: {class: "user"} do |f| %>
        <div class="col-12">
          <div class="row mx-4">
            <div class="col-12 mb-2">
              <label class="order-form-label">Name</label>
            </div>
            <div class="col-12 col-sm-6">
              <%= f.text_field :first_name, :class=>"order-form-input", :placeholder=>"First" %>
            </div>
            <div class="col-12 col-sm-6 mt-2 mt-sm-0">
              <%= f.text_field :last_name, :class=>"order-form-input" ,:placeholder=>"Last"%>
            </div>
          </div>

         


          <div class="row mt-3 mx-4">
            <div class="col-12">
              <label class="order-form-label">Email</label>
            </div>
            <div class="col-12">
              <%= f.email_field :email,:class=>"order-form-input" ,:placeholder=>"Email ", value: current_user.email%>
            
            </div>
          </div>

           <div class="row mt-3 mx-4">
            <div class="col-12">
              <label class="order-form-label">Total  Amount</label>
            </div>
            <div class="col-12">
              <%= f.text_field :total_amount, :class=>"order-form-input", :placeholder=>"Total"%>
            </div>
          </div>

          <div class="row mt-3 mx-4">
            <div class="col-12">
              <label class="order-form-label">Mobile</label>
            </div>
            <div class="col-12">
              <%= f.number_field :mobile, :class=>"order-form-input", :placeholder=>"mobile "%>
            </div>
          </div>

        


          <div class="row mt-3 mx-4">
            <div class="col-12">
              <label class="order-form-label">Adress</label>
            </div>
           

            <div class="col-12 col-sm-6 mt-2 pr-sm-2">
              <%= f.text_field :city,:class=>"order-form-input", :placeholder=>"City"%>
            </div>
            <div class="col-12 col-sm-6 mt-2 pl-sm-0">
              <%= f.text_field :region, :class=>"order-form-input" ,:placeholder=>"Region"%>
            </div>
            


           


          <div class="row mt-3 mx-4">
            <div class="col-12">
              <div class="form-check">
                <%= f.check_box :cash, :class=>"form-check-input"%>
                <label for="validation" class="form-check-label">Cash On Delivery</label>
              </div>
            </div>
          </div>

           <div class="row mt-3 mx-4">
            <div class="col-12">
              <div class="form-check">
                <%= f.check_box :online, :class=>"form-check-input"%>
                <label for="validation" class="form-check-label">Online Payment</label>
              </div>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-12">
              <%= f.submit "Pay",:class=>"btn btn-dark d-block mx-auto btn-submit"%>
            </div>
          </div>
     <% end -%>
        </div>
      </div>
    </div>
  </section>