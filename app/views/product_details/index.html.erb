                            <th scope="col">Quantity</th>

                            </tr>
                         </thead>
                    <tbody>
                        <tr>
                    <%@productdetails.each do |product| %>
                    <tr>
                   

                     <td><%= product.product_name%></td>
                    <td><%= product.product_price%></td>
                    <td><%= product.quantity%></td>
                     <td><%= product.total_amount%></td>
                       

                    

                     <% end -%>   

                           
                           
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col mb-2">
