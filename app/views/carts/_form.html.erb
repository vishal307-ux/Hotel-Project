



<div class="container">
</div>

<section class="jumbotron text-center">
    <div class="container">
    <h2 class="jumbotron-heading">Add Product To CART</h2>
    </div>
</section>

<div class="container mb-4">
    <div class="row">
        <div class="col-12">
          <section class="order-form my-4 mx-4">
  
    <div class="container pt-4">
        <%= form_for @cart,html: {class: "user"} do |f| %>
            <div class="row mt-3 mx-4">
            <div class="col-12 ">
              <label class="order-form-label">Product ID</label>
            </div>
            <div class="col-12 ">
            <%#= f.text_field :product_id,:class => "order-form-input",:autocomplete=>"off" %>
            <%=  f.text_field :product_id, :value => @product.id , :readonly => true%>
            </div>
            </div>
          


          


          <div class="row mt-3 mx-4">
            <div class="col-12">
              <label class="order-form-label">Product Price</label>
            </div>
            <div class="col-12">
             <%#= f.text_field :product_price,:class => "order-form-input",:autocomplete=>"off" %>
             <%=  f.text_field :product_price, :value => @product.product_price , :readonly => true%>
            </div>
          </div>

          
          <div class="row mt-3 mx-4">
            <div class="col-12">
              <label class="order-form-label">Quantity</label>
            </div>
            <div class="col-12">
             <%#= f.text_field :quantity,:class => "order-form-input",:autocomplete=>"off" %>
              <%=  f.text_field :product_price, :value => @product.quantity , :readonly => true%>
            </div>
          </div>

          

          <div class="row mt-3">
            <div class="col-12">
              <button type="button" id="btnSubmit" class="btn btn-dark d-block mx-auto btn-submit"><%= link_to :submit%></button>
             

            </div>
          </div>

        </div>
      </div>
    </div>
       <% end -%>
    </div>

 
  </section>  

        </div>
        <div class="col mb-2">
            <div class="row">
                <div class="col-sm-12  col-md-6">
                    

                    <%=link_to "Continue Shopping",products_path,:class=>"btn btn-block btn-light"%>
                </div>
                <div class="col-sm-12 col-md-6 text-right">
                    <button class="btn btn-lg btn-block btn-success text-uppercase">Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->

